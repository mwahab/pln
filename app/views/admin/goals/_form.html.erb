<%= semantic_form_for [:admin, @goal] do |f| %>
  <%= f.inputs "Goal Details" do %>
    <%= f.input :member, :include_blank => false %>
    <%= f.input :body, :label => "Description" %>
    <%= f.input :admin_user_id, :as => :hidden, :value => current_admin_user.id %>
     <%= f.input :duedate, :label => "Due Date (blank for N/A)", :as => :datetime, :order => [:month, :day, :year], :start_year => 2010, :minute_step => 5, :ampm => true, :prompt => {:day => 'Day', :month => 'Month', :year => 'Year', :hour => 'Hour', :minute => 'Minute'} %>
    <%= f.input :complete, :as => :select, :collection => [["False", false], ["True", true]], :include_blank => false %>
  <% end %>
  <%= f.buttons :commit %>
<% end %>
