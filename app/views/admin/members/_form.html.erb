<%= semantic_form_for [:admin, @member] do |f| %>
  <%= f.inputs "Details" do %>
    <%= f.input :firstName, :label => "First Name" %>
    <%= f.input :lastName, :label => "Last Name" %>
    <%= f.input :name, :label => "Name" %>
    <%= f.input :birthdate, :as => :date, :order => [:month, :day, :year], :start_year => 1900 %>
    <%= f.input :gender, :as => :select, :collection => Member::GENDERS %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :province, :as => :select, :collection => Member::PROVINCES %>
    <%= f.input :postalCode, :label => "Postal Code" %>
    <%= f.input :telephone %>
    <%= f.input :carecard, :label => "Care Card" %>
    <%= f.input :sin, :label => "SIN" %>
    <%= f.input :ethnicity, :as => :select, :collection => Member::ETHNICITIES %>
    <%= f.input :diagnosis, :as => :select, :collection => Member::DIAGNOSES %>
    <%= f.input :placeDiagnosis, :label => "Place of Diagnosis" %>
    <%= f.input :dateDiagnosis, :label => "Date of Diagnosis", :as => :date, :order => [:month, :day, :year], :start_year => 1900 %>
    <%= f.input :arv, :label => "Anti-Retrovirals?", :as => :radio, :collection => [["Yes", true], ["No", false]] %>
    <%= f.input :arvDate, :as => :date, :order => [:month, :day, :year], :start_year => 1900 %>
    <%= f.input :methadone, :label => "Methadone?", :as => :radio, :collection => [["Yes", true], ["No", false]] %>
    <%= f.input :doctor %>
    <%= f.input :doctorPhone, :label => "Doctor Telephone" %>
    <%= f.input :emergency_contact_name, :label => "Emergency Contact" %>
    <%= f.input :emergency_contact_phone, :label => "Emergency Contact Telephone" %>
    <%= f.input :active, :label => "Active?", :as => :radio, :collection => [["Yes", true], ["No", false]] %>
  <% end %>
  <%= f.buttons :commit %>
<% end %>
